%header{:class => "flex justify-between items-center px-6 h-16"}
  = link_to '/', :title => "return to the homepage of AppSignal" do
    = image_tag "dl_logo/appsignal-logo.svg", :alt => "Logo of AppSignal", :class => "block h-6"

  %nav
    %ul.flex
      %li.mr-4= link_to 'Home', 'https://appsignal.com'
      %li.mr-4
        = link_to "Tour", "#subnav"
        %ul.hidden
          - data.tours.tours.each do |tour|
            %li.mr-4= link_to tour['title'], "https://appsignal.com/tour/#{tour['slug']}"
          %li.mr-4= link_to "AppSignal for Elixir", "https://appsignal.com/elixir/"
          %li.mr-4= link_to "JavaScript error tracking", "https://appsignal.com/javascript/"

      %li.mr-4= link_to 'Docs', 'http://docs.appsignal.com', :class => "active"
      %li.mr-4= link_to 'Blog', 'http://blog.appsignal.com'
      %li.mr-4= link_to 'Pricing', 'https://appsignal.com/plans/'

  %nav
    %ul.flex
      %li.logged-in= link_to 'Go to app', "https://appsignal.com/accounts", :class => "c-button c-button--white mr-4"
      %li.logged-out= link_to 'Log in', 'http://appsignal.com/users/sign_in', :class => "c-button c-button--white mr-4"
      %li.logged-out= link_to 'Sign up', 'http://appsignal.com/users/sign_up', :class => "c-button"
